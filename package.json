    "multer-storage-cloudinary": "^4.0.0",
    "socket.io": "^4.7.2",
    "stripe": "^13.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
